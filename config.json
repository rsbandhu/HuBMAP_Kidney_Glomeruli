{
    "name": "UNet",
    "n_gpu": 1,
    "use_synch_bn": false,

    "arch": {
        "type": "PSPNet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "VOC",
        "args":{
            "data_dir": "../train/tiled_thresholded_512",
            "batch_size": 10,
            "base_size": 400,
            "crop_size": 380,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train_aug",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "VOC",
        "args":{
            "data_dir": "../train/tiled_thresholded_512",
            "batch_size": 10,
            "crop_size": 480,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
		"type": "adam",

        "sgd":{
			"differential_lr": true,
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        	},

		"adam":{
			"differential_lr": true,
            "lr": 0.0001,
            "weight_decay": 1e-4,
            "momentum": 0.9
			}
    },

    "loss": {"bce_dice_ratio": 0.8 },

    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 30,
        "save_dir": "saved_checkpoints/",
        "save_period": 3,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/logs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    }
}
